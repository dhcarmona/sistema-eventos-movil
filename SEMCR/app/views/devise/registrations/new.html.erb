<div class="container">
  <div class="row">
    <div class="offset3 span6">
        <h3 align="center">Registrar Usuario</h1>

        <p>&nbsp;</p>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal centered"}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, :label => "Correo Electrónico", :placeholder => "pedro@dominio.com", :as => "email"%>
          <%= f.input :password, required: true, :label => "Contraseña", :placeholder => "8 caracteres mínimo." %>
          <%= f.input :password_confirmation, :label => "Confirmar Contraseña" %>
          <%= f.input :foto, :label => "Imagen de Perfil", :hint => "Archivos JPG/PNG" %>

        </div>

        <div class="row">
          <div class="col-md-4">
          </div>
          <div class="col-md-4">
            <%= f.button :submit, "Registrar", :class => "btn btn-primary" %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
</div>



